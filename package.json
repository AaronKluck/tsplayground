{
    "name": "tsplayground",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "tsc -b",
        "dev:server": "npm --workspace=server run dev",
        "dev:client": "npm --workspace=client run dev",
        "build:all": "npm run build --workspaces",
        "clean": "tsc -b --clean",
        "format": "prettier --write .",
        "lint": "eslint . --ext .ts,.tsx"
    }
}